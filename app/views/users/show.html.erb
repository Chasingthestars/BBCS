<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.picture? %>
          <%= image_tag @user.picture.url  %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
      </h1>
      <h1>
        <%= @user.name %>
      </h1>
      <h1>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
</div>