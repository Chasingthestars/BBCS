


<div class="mainer">
  <div class="container-fluid">
    <div class="col-md-9 col-lg-9 col-center-block content-wrap">
      <div class="edit-post" >
        <%= simple_form_for(@artical) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="edit-header">
              <!-- 文章标题-->
              <div class="post-title">

                <div class="form-group">
                  <%= f.input_field :title, class: "form-input", id: "title-input", placeholder: "标题", maxlength: "50" %>
                </div>

                <div class="form-group">
                  <% @all_artical=Artical.select("category").distinct%>
                  <%@category_array=["选择分类"] %>
                  <% @all_artical.each do |each_artical|%>
                    <%@category_array.append(each_artical.category) %>
                  <%end %>
                  <%= f.input_field :category, :collection => @category_array, :selected => '默认分类' %>

                </div>

<!--                <div id="my_form">-->
                  <%#= f.kindeditor :content,:width => 900, :height => 600%>
<!--                </div>-->
                <%= f.text_area :content, id: :post_content, style: 'height:400px; max-height:500px;' %>


                <div style="margin-top: 50px">
                  <%= f.button :submit, value: "发布文章" %>
                </div>

              </div>


            </div>


          </div>

         
        <% end %>


      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    var editor = new wangEditor('post_content');  // 用构造函数的方法，创建一个post_content, 把值传给editor. post_content 是text_area的id.
    editor.create(); //用指定的原型对象去创建一个新的对象


</script>







